<% if object.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(object.errors.count, "error") %> prohibited
        this action from being completed:
      </h4>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
