<div id="movie_details">
  <h1><%=@movie.title %></h1>
  <p>Runtime: <%=@movie.runtime%></p>
  <p>Genre:
    <%= link_to(@movie.genre.name, genre_path(@movie.genre)) %>
  </p>
  <h3>Synopsis: </h3>
  <p><%=@movie.synopsis%></p>
</div>
<h3>Discuss this Movie: </h3>
<p><%= link_to "New Comment",  new_comment_path(movie_id: @movie, review_id: @review) %></p>
<div id="discussion">
  <%=render @movie.comments%>
</div>
<h3>Reviews: </h3>
<p><%= link_to "New Review",  new_review_path(movie_id: @movie) %></p>
<div id="review_stubs">
  <%=render @movie.reviews%>
</div>


